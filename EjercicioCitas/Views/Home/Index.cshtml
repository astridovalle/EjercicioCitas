@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Citas sin Aprobar</h2>
        <table class="table">
            <thead>
                <tr class="info">
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Auto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CitasRechazadas)
                {
                <tr>
                    <th>@item.Fecha.ToString("dd-MMM-yyyy")</th>
                    <td>@item.Hora</td>
                    <td>@item.Cliente</td>
                    <td> <a href="/Autos/Details/@item.AutoId"> @item.Auto</a> </td>
                </tr>
                }

                
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h2>Ultimas Citas</h2>
        <table class="table">
            <thead>
                <tr class="success">
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Auto</th>
                    <th scope="col">Observaciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CitasAceptadas)
                {
                    <tr>
                        <th>@item.Fecha.ToString("dd-MMM-yyyy")</th>
                        <td>@item.Hora</td>
                        <td>@item.Cliente</td>
                        <td> <a href="/Autos/Details/@item.AutoId"> @item.Auto</a> </td>
                        <td>@item.Observaciones</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h2>Citas Rechazadas</h2>
        <table class="table">
            <thead>
                <tr class="danger">
                    <th scope="col">Fecha</th>
                    <th scope="col">Hora</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Auto</th>
                    <th scope="col">Motivo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CitasRechazadas)
                {
                <tr>
                    <th>@item.Fecha.ToString("dd-MMM-yyyy")</th>
                    <td>@item.Hora</td>
                    <td>@item.Cliente</td>
                    <td> <a href="/Autos/Details/@item.AutoId"> @item.Auto</a> </td>
                    <td>@item.MotivoRechazo</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
